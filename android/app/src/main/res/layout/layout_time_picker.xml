<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ewin="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="15dp"
    android:layout_width="wrap_content"
    android:layout_height="330dp" >

    <com.project.rptang.android.wheel_datatime.WheelView
        android:id="@+id/year"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="14dp"
        ewin:itemNumber="3"
        ewin:lineColor="@android:color/transparent"
        ewin:maskHeight="32dp"
        ewin:noEmpty="true"
        ewin:normalTextColor="@color/previous"
        ewin:normalTextSize="36sp"
        ewin:selectedTextColor="@color/customText"
        ewin:selectedTextSize="38sp"
        ewin:unitHeight="110dp" />
    <com.project.rptang.android.wheel_datatime.WheelView
        android:layout_toRightOf="@+id/year"
        android:id="@+id/month"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="99dp"
        ewin:itemNumber="3"
        ewin:lineColor="@android:color/transparent"
        ewin:lineHeight="3dp"
        ewin:maskHeight="32dp"
        ewin:noEmpty="true"
        ewin:normalTextColor="@color/previous"
        ewin:normalTextSize="36sp"
        ewin:selectedTextColor="@color/customText"
        ewin:selectedTextSize="38sp"
        ewin:unitHeight="110dp" />

    <com.project.rptang.android.wheel_datatime.WheelView
        android:layout_toRightOf="@+id/month"
        android:id="@+id/day"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="77dp"
        ewin:itemNumber="3"
        ewin:lineColor="@android:color/transparent"
        ewin:lineHeight="2dp"
        ewin:maskHeight="32dp"
        ewin:noEmpty="true"
        ewin:normalTextColor="@color/previous"
        ewin:normalTextSize="36sp"
        ewin:selectedTextColor="@color/customText"
        ewin:selectedTextSize="38sp"
        ewin:unitHeight="110dp" />

    <com.project.rptang.android.wheel_datatime.WheelView
        android:layout_toRightOf="@+id/day"
        android:id="@+id/hour"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="100dp"
        ewin:itemNumber="3"
        ewin:lineColor="@android:color/transparent"
        ewin:maskHeight="32dp"
        ewin:noEmpty="true"
        ewin:normalTextColor="@color/previous"
        ewin:normalTextSize="36sp"
        ewin:selectedTextColor="@color/customText"
        ewin:selectedTextSize="38sp"
        ewin:unitHeight="110dp" />

    <com.project.rptang.android.wheel_datatime.WheelView
        android:layout_toRightOf="@+id/hour"
        android:id="@+id/minute"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        ewin:itemNumber="3"
        ewin:lineColor="@android:color/transparent"
        ewin:maskHeight="32dp"
        ewin:noEmpty="true"
        ewin:normalTextColor="@color/previous"
        ewin:normalTextSize="34sp"
        ewin:selectedTextColor="@color/customText"
        ewin:selectedTextSize="38sp"
        ewin:unitHeight="110dp" />
</RelativeLayout>